{
  "openapi": "3.1.0",
  "info": {
    "version": "2.0.0",
    "title": "Task Pro"
  },
  "consumes": ["application/json", "multipart/form-data"],
  "produces": ["application/json"],
  "servers": [{ "url": "https://final-project-backend-wdid.onrender.com" }],
  "tags": [
    {
      "name": "Auth"
    },
    {
      "name": "Dashboard"
    },
    {
      "name": "Board"
    },
    {
      "name": "Column"
    },
    {
      "name": "Task"
    }
  ],
  "paths": {
    "/api/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "Create a new user",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistrationAndLoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Custom message from validation library"
                }
              }
            }
          },
          "409": {
            "description": "Conflict",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Provided email already exists"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/signin": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login user",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistrationAndLoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Custom message from validation library"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Email or password invalid"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/current": {
      "get": {
        "tags": ["Auth"],
        "summary": "Get information about the current user",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CurrentAndEditUserResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Unauthorized"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/user": {
      "patch": {
        "tags": ["Auth"],
        "summary": "Edit user info",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": false,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "avatar": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EditUserRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CurrentAndEditUserResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Custom message from validation library"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Unauthorized"
                }
              }
            }
          },
          "409": {
            "description": "Conflict",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Provided email already exists"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Logout user",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "204": {
            "description": "No Content",
            "content": {
              "application/json": {
                "type": "object",
                "example": {}
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Unauthorized"
                }
              }
            }
          }
        }
      }
    },
    "/api/dashboard": {
      "patch": {
        "tags": ["Dashboard"],
        "summary": "Switch theme",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SwitchThemeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CurrentAndEditUserResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Custom message from validation library"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Unauthorized"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Board"],
        "summary": "Get all boards",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetAllBoardsResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Unauthorized"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Board"],
        "summary": "Add new board",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddBoardRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddBoardResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Custom message from validation library"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Unauthorized"
                }
              }
            }
          },
          "409": {
            "description": "Conflict",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Board with the same name already exists"
                }
              }
            }
          }
        }
      }
    },
    "/api/dashboard/help": {
      "post": {
        "tags": ["Dashboard"],
        "summary": "Send email 'Need help'",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SendEmailRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Email sent"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Custom message from validation library"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "type": "object",
                "example": {
                  "message": "Unauthorized"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "example": "qwerty123"
          }
        }
      },
      "RegistrationAndLoginResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjY1YjhmNGE2YjJmZjY4MDU5MDk0YzMyYSIsImlhdCI6MTcwNjYyMDA4OCwiZXhwIjoxNzA2NjIwOTg4fQ.StzrXFqK2u4JR0SmtvYJ_aqbebkHRQb3-6NU5Amiwuc"
          },
          "user": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string",
                "example": "65c0388ea89738bb0120fed0"
              },
              "name": {
                "type": "string",
                "example": "John Doe"
              },
              "email": {
                "type": "string",
                "format": "email"
              },
              "userTheme": {
                "type": "string",
                "example": "light"
              },
              "avatarURL": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string",
                    "example": "http://res.cloudinary.com/.../nsd6alpowmw3ska.jpg"
                  },
                  "publicId": {
                    "type": "string",
                    "example": "avatars/nsd6alpowmw3ska"
                  }
                }
              }
            }
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "example": "qwerty123"
          }
        }
      },
      "CurrentAndEditUserResponse": {
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string",
                "example": "65c0388ea89738bb0120fed0"
              },
              "name": {
                "type": "string",
                "example": "John Doe"
              },
              "email": {
                "type": "string",
                "format": "email"
              },
              "userTheme": {
                "type": "string",
                "example": "light"
              },
              "avatarURL": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string",
                    "example": "http://res.cloudinary.com/.../nsd6alpowmw3ska.jpg"
                  },
                  "publicId": {
                    "type": "string",
                    "example": "avatars/nsd6alpowmw3ska"
                  }
                }
              }
            }
          }
        }
      },
      "EditUserRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "example": "qwerty123"
          }
        }
      },
      "SwitchThemeRequest": {
        "type": "object",
        "properties": {
          "userTheme": {
            "type": "string",
            "example": "violet"
          }
        }
      },
      "GetAllBoardsResponse": {
        "type": "object",
        "properties": {
          "total": {
            "type": "integer",
            "example": "1"
          },
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "_id": {
                  "type": "string",
                  "example": "65c0388ea89738bb0120fed0"
                },
                "title": {
                  "type": "string",
                  "example": "To Do"
                },
                "icon": {
                  "type": "string",
                  "example": "star"
                },
                "owner": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string",
                      "example": "65c0388ea89738bb0120fed0"
                    },
                    "name": {
                      "type": "string",
                      "example": "John Doe"
                    },
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "userTheme": {
                      "type": "string",
                      "example": "light"
                    }
                  }
                },
                "createdAt": {
                  "type": "string",
                  "format": "date-time"
                },
                "updatedAt": {
                  "type": "string",
                  "format": "date-time"
                }
              }
            }
          }
        }
      },
      "AddBoardRequest": {
        "type": "object",
        "required": ["title", "icon", "background"],
        "properties": {
          "title": {
            "type": "string",
            "example": "To Do"
          },
          "icon": {
            "type": "string",
            "example": "star"
          },
          "background": {
            "type": "string",
            "example": "default"
          }
        }
      },
      "AddBoardResponse": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "To Do"
          },
          "icon": {
            "type": "string",
            "example": "star"
          },
          "background": {
            "type": "string",
            "example": "default"
          },
          "owner": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string",
                "example": "65c0388ea89738bb0120fed0"
              },
              "name": {
                "type": "string",
                "example": "John Doe"
              },
              "email": {
                "type": "string",
                "format": "email"
              },
              "userTheme": {
                "type": "string",
                "example": "light"
              }
            }
          },
          "_id": {
            "type": "string",
            "example": "65c0388ea89738bb0120fed0"
          },
          "columns": {
            "type": "array"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "SendEmailRequest": {
        "type": "object",
        "required": ["name", "comment"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "comment": {
            "type": "string",
            "example": "Need help"
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
