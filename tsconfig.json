{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./app/*"],
      "@prisma": ["./prisma/prisma.client.ts"]
    }
  },
  "include": ["./app/**/*"]
}
